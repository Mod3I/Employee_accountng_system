<Window x:Class="Only_Test.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Only_Test"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid Grid.Row="0">
            <Polygon Height="150" Width="150"
                     Points="0,0,150,0,150,150,0,150"
                     Fill="Red" HorizontalAlignment="Center" VerticalAlignment="Top" ></Polygon>
        </Grid>
        <Polygon Height="150" Width="150" Fill="Red" ></Polygon>
        <Polygon Points="150,0,150,30,0,30,0,0" HorizontalAlignment="Center" Fill="#FF006837" Height="30" Width="150" VerticalAlignment="Bottom" ></Polygon>
    </Grid>
</Window>

<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    
    <!--Стандартные для приложения лейблы с белым текстом-->
    
    <Style TargetType="Label">
        <Setter Property="Foreground" Value="White"/>
        <Setter Property="FontFamily" Value="Arial Black"/>
    </Style>
    
    <Style TargetType="Label" x:Key="SmallWhiteLabel" BasedOn="{StaticResource {x:Type Label}}">
        <Setter Property="FontSize" Value="12"/>
    </Style>
    
    <!--Лейблы с серым текстом-->
    
    <Style TargetType="Label" x:Key="GrayLabel">
        <Setter Property="Foreground" Value="#FF4D4D4D"/>
        <Setter Property="FontFamily" Value="Arial Black"/>
        <Setter Property="Padding" Value="0"/>
    </Style>
    
    <Style TargetType="Label" x:Key="BigGrayLabel" BasedOn="{StaticResource GrayLabel}">
        <Setter Property="FontSize" Value="24"/>
    </Style>
    
    <Style TargetType="Label" x:Key="NormalGrayLabel" BasedOn="{StaticResource GrayLabel}">
        <Setter Property="FontSize" Value="16"/>
    </Style>
    
    <Style TargetType="Label" x:Key="SmallGrayLabel" BasedOn="{StaticResource GrayLabel}">
        <Setter Property="FontSize" Value="12"/>
    </Style>
    
</ResourceDictionary>
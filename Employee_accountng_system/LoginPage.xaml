<Page x:Class="Employee_accountng_system.LoginPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Employee_accountng_system"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="LoginPage">

    <Grid>
        <Label Content="Логин или почта" 
               Grid.Row="1" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="52,20,0,0"></Label>
        <TextBox Grid.Row="1" FontSize="15" Width="195" Height="24"
                 VerticalAlignment="Top" HorizontalAlignment="Center" 
                 Margin="0,48,0,0"/>
        <Label Content="Пароль"
            Grid.Row="1" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="52,65,0,0" ></Label>
        <PasswordBox Grid.Row="1" FontSize="15" Width="195" Height="24" Margin="0,-49,0,0"/>
        <Button Grid.Row="1" HorizontalAlignment="Center" Content="Авторизоваться" FontSize="15"
                Height="30" Width="120" Margin="0,120,0,0"></Button>
        <Button Grid.Row="1" HorizontalAlignment="Center" Content="Регистрация" FontSize="15"
                Height="30" Width="120" Margin="0,215,0,0"
                Click="Button_Click"></Button>
    </Grid>
</Page>
